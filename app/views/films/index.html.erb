<h1>Films</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Nom</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= link_to image_tag(film.picture_url, :width => 100) , film_path(film.id) if film.picture.present? %></td>
        <td><%= film.name %></td>
        <td><%= film.description %></td>
        <td><%= link_to 'Afficher', film %></td>
        <td><%= link_to 'Modifier', edit_film_path(film) %></td>
        <td><%= link_to 'Supprimer', film, method: :delete, data: { confirm: 'Etes vous sur ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un film', new_film_path, :class => "btn btn-primary btn-lg", :role => "button" %>


